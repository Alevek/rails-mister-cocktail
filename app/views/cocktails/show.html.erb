
<div class="show-banner">
  <div class="container">
    <h1 class="title"> <%= "##{@cocktail.name}" %></h1>
      <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
          <li class="list-group-item doses d-flex justify-content-between">
            <i class="material-icons">add</i>
            <%= dose.ingredient.name %>
            <%= dose.description %>
            <%= link_to "Suppr",
                dose_path(dose),
                method: :delete,
                data: { confirm: "ÃŠtes vous sur?" } %>
            </li>
        <% end %>
      </ul>
      <ul class="list-group reviews">
        <h2>Commentaires :</h2>
        <% @cocktail.reviews.each do |review| %>
        <li class="list-group-item"><%= review.content %></li>
        <% end %>
      </ul>
      <ul class="link-show">
        <li><span><%= link_to 'Ajouter un dosage',  new_cocktail_dose_path(@cocktail) %></span></li>
        <li><span><%= link_to 'Retour', cocktails_path %></span></li>
        <li><span><%= link_to 'Laisser un commentaire', new_cocktail_review_path(@cocktail) %></span></li>
      </ul>
  </div>
</div>
