<div class="container">
  <h2><i class="fad fa-glass-martini-alt"></i><%= @cocktail.name %></h2>
  <ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item doses"><i class="fad fa-wine-bottle"></i><%= dose.ingredient.name %>
        <%= dose.description %>
        <%= link_to "Delete #{@dose}",
            dose_path(dose),
            method: :delete,
            data: { confirm: "Are you sure?" } %>
        </li>
    <% end %>
  </ul>

  <%= link_to 'add dose',  new_cocktail_dose_path(@cocktail) %>

</div>
