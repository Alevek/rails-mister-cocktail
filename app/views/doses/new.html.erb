

<div class="new-dose-banner">
  <div class="container">
    <h1 class="title"> #Indiquer le dosage</h1>
    <div class="container">
      <div class="container">
        <%= simple_form_for([@cocktail, @dose]) do |f| %>
          <%= f.association :ingredient, input_html: { class: "select2" } %>
          <%= f.input :description, label: 'Quantity' %>
          <%= f.submit 'Add dose', class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
